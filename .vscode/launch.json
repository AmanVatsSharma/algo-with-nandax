{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS API",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "--filter",
        "@algo-nandax/api",
        "start:debug"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "inspector",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}/apps/api"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Next.js",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "--filter",
        "@algo-nandax/web",
        "dev"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/apps/web"
    }
  ]
}
