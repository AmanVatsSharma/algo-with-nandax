# Application
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=algo_trading

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=30d

# Zerodha Kite
KITE_API_KEY=your-kite-api-key
KITE_API_SECRET=your-kite-api-secret
KITE_REDIRECT_URL=http://localhost:3000/auth/kite/callback

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Encryption (used for broker token encryption at rest)
ENCRYPTION_KEY=replace-with-a-strong-random-secret

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# WebSocket
WS_PORT=3002

# Trading reconciliation worker
TRADING_AUTO_RECONCILIATION_ENABLED=true
TRADING_AUTO_RECONCILIATION_BATCH_SIZE=100

# Risk auto kill-switch worker
RISK_AUTO_KILL_SWITCH_ENABLED=true
RISK_AUTO_KILL_SWITCH_BATCH_SIZE=200

# AI provider runtime (optional for live inference mode)
AI_PROVIDER_TIMEOUT_MS=4000
OPENAI_API_KEY=
OPENAI_ESTIMATED_COST_USD_PER_1K_TOKENS=0.002
ANTHROPIC_API_KEY=
ANTHROPIC_ESTIMATED_COST_USD_PER_1K_TOKENS=0.0025
